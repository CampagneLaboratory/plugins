<taskConfig>
    <id>FIRST_TASK</id>
    <name>Task name goes here</name>
    <version>1.0</version>
    <help>Simple task</help>

    <runtime>

    </runtime>
    <!-- resources required by the task-->
    <requires>
        <resource>
            <id>GSNAP_WITH_GOBY</id>
            <versionAtLeast>2011.11.17</versionAtLeast>
        </resource>
    </requires>
    <execute>
        <script phase="pre-deployment" language="groovy|java|bash|.." filename="myscript.sh"/>
    </execute>
    <inputSchema>
        <fileSets>  <!-- OR or AND among instanceOf ?-->
            <fileSet>
                <id>GOBY_ALIGNMENT</id>
                <versionAtLeast>1.0</versionAtLeast>
                <files> <!-- if specified, task execution will move only parts of the fileset-->
                    <id>ENTRIES</id>
                    <id>INDEX</id>
                </files>
            </fileSet>
            <fileSet>
                <id>DIR</id>
                <versionAtLeast>1.0</versionAtLeast>
            </fileSet>
        </fileSets>
        <filters>    <!-- filesets will be filtered with these conditions -->
            <includes> <!-- AND among includes-->
                <attribute>  <!-- attribute list-->
                    <name></name>
                    <value></value>
                </attribute>
            </includes>
            <excludes>
                <!-- attribute list-->
            </excludes>
        </filters>
    </inputSchema>
    <outputSchema>
        <fileSets>
            <fileSet>
                <id>LUCENE_TABLES</id>
                <version>1.0</version>
                <failureIfNotProduced>true</failureIfNotProduced>
            </fileSet>
            <fileSet>
                <id>VCF</id>
                <version>1.0</version>
                <failureIfNotProduced>false</failureIfNotProduced>
            </fileSet>
        </fileSets>
    </outputSchema>
        <options>
            <option>

            </option>
        </options>
</taskConfig>