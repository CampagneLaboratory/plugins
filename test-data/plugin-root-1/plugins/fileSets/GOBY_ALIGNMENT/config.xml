<fileSetConfig>
    <id>GOBY_ALIGNMENT</id>
    <name>Name goes here</name>
    <version>2.0</version>
    <help>Simple fileset defining two fixed entries, one of them is optional</help>
    <attributes>
        <attribute name="basename"/>
        <attribute name="organism"/>
        <attribute name="anotherName"/>
    </attributes>
    <fileSelectors>
            <selector> <!-- AND among files -->
                <id>ENTRIES</id>
                <pattern matchAttribute="basename">*.entries</pattern>
                <mandatory>true</mandatory>
            </selector>
            <selector>
                <id>INDEX</id>
                <pattern matchAttribute="basename">*.index</pattern>
                <mandatory>true</mandatory>
            </selector>
            <selector>
                <id>HEADER</id>
                <pattern matchAttribute="basename">*.header</pattern>
                <mandatory>true</mandatory>
            </selector>
    </fileSelectors>
</fileSetConfig>

