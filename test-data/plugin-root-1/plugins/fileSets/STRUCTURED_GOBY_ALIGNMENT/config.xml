<fileSetConfig>
    <id>STRUCTURED_GOBY_ALIGNMENT</id>
    <name>Name goes here</name>
    <version>2.0.0</version>
    <help>Allow to upload multiple GOBY_ALIGNMENTs from different folders </help>
    <attributes>
        <attribute name="organism"/>
        <attribute name="basename"/>
    </attributes>
    <fileSelectors>
            <selector> <!-- AND among files -->
                <id>ENTRIES</id>
                <pattern matchAttribute="basename">*/*.entries</pattern>
                <mandatory>true</mandatory>
            </selector>
            <selector>
                <id>INDEX</id>
                <pattern matchAttribute="basename">*/*.index</pattern>
                <mandatory>false</mandatory>
            </selector>
            <selector>
                <id>HEADER</id>
                <pattern matchAttribute="basename">*/*.header</pattern>
                <mandatory>false</mandatory>
            </selector>
            <selector>
                <id>DIR</id>
                <pattern matchAttribute="basename,organism">*/*</pattern>
                <mandatory>false</mandatory>
            </selector>
    </fileSelectors>

</fileSetConfig>

