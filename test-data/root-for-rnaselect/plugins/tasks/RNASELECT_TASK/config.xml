<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<taskConfig xsi:noNamespaceSchemaLocation="../../../../../schemas/plugins.xsd"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <name>RNASELECT Task</name>
    <id>RNASELECT_TASK</id>
    <help>Execute RNASELECT resource as Task to process multiple reads files and produce a TSV</help>
    <version>1.1</version>
    <requires>
        <resource>
            <id>RNASELECT</id>
            <versionAtLeast>1.0</versionAtLeast>
        </resource>
    </requires>
    <inputSchema>
        <parameter>
            <name>INPUT_READS</name>
            <type>
                <fileSetRef minOccurs="1" maxOccurs="unbounded"> <!-- a list of tags referring this config is expected -->
                    <id>COMPACT_READS</id>
                    <versionAtLeast>1.0</versionAtLeast>
                </fileSetRef>
            </type>
        </parameter>
        <criteria/>
    </inputSchema>
    <outputSchema>
        <returnedValue>
            <name>STATS</name>
            <type>
                <fileSetRef minOccurs="1" maxOccurs="1">  <!-- only one can be uploaded-->
                    <id>TSV</id>
                    <versionExactly>1.0</versionExactly>
                    <mandatory>true</mandatory>
                </fileSetRef>
            </type>
        </returnedValue>
    </outputSchema>

</taskConfig>